
  
<!DOCTYPE html>
<html>
    <head>
        <% include partials/head %>

    </head>
    <body>
        <% include partials/header %>

        <div class="container">
            <div class="col-sm-offset-3 col-sm-6">
            	<form method="post" class="row">
                    
	                <h3 style="margin-bottom: 2em">Wellcome back <b><em><%= pass.username %></em></b> </h3>
                    <fieldset>
                        <legend> Choose a password </legend>
    	                
                        <div id="match" class="alert alert-danger"> Password and confirmation do not match.</div>
    	                <div class="form-group row">
    	                    <label for="password" class="col-sm-3 col-form-label col-form-label-lg">Password</label>
    	                        <div class="col-sm-9">
    	                            <input type="password" class="form-control form-control-lg" name="password" id="password" required/>
    	                        </div>
    	                </div>
    	                <div class="form-group row">
    	                    <label for="confirmation" class="col-sm-3 col-form-label col-form-label-lg">Confirmation</label>
    	                        <div class="col-sm-9">
    	                            <input type="password" class="form-control form-control-lg" name="confirmation" id="confirmation" required/>
    	                        </div>
    	                </div>
	                </fieldset>
	                
                    <fieldset>
                        <legend> Additional information </legend>
                        <div class="form-group row">
                            <label for="fname" class="col-sm-3 col-form-label col-form-label-lg">Firstname</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control form-control-lg" name="fname" id="fname" required/>
                                </div>
                        </div>
                        <div class="form-group row">
                            <label for="lname" class="col-sm-3 col-form-label col-form-label-lg">Lastname</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control form-control-lg" name="lname" id="lname" required/>
                                </div>
                        </div>
                    </fieldset>
                    
                    <div class="form-group row col-sm-2 pull-right">
	                    <button type="submit" id="submit" class="btn btn-primary pull-right"> <%= title %> </button>
	                </div>
	            </form>
	        </div>
        </div>
        
        

        <% include partials/footer %>
        <script type="text/javascript">
        	$("#submit").prop("disabled", true);
        	$("#match").hide();

        	$("#password, #confirmation").keyup(function(e){
        		console.log('e = '+JSON.stringify(e));
        		var pass = $("#password").val(), confirm = $("#confirmation").val();
        		console.log("Pass : "+pass+", confirm : "+confirm);
        		if(pass && confirm && pass == confirm){
        			$("#submit").prop("disabled", false);
        			$("#match").hide();
        		}
        		else{
        			$("#submit").prop("disabled", true);
        			$("#match").show();
        		}
        	});
        </script>
    </body>
</html>
